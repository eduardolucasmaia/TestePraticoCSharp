@model TesteInvillia.Models.TrocarSenhaViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no" />
    <title>@ViewData["Title"] - @DTO.Ferramentas.Constantes.NOME_APLICACAO</title>

    <environment include="Development">
        <link rel="stylesheet" href="~/lib/fontawesome-free/css/all.css" />
        <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" />
        <link rel="stylesheet" href="~/lib/sb-admin-2/dist/css/sb-admin-2.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="~/lib/fontawesome-free/css/all.min.css" />
        <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" />
        <link rel="stylesheet" href="~/lib/sb-admin-2/dist/css/sb-admin-2.min.css" />
    </environment>
</head>
<body class="bg-gradient-primary">
    <div class="container">
        <!-- Outer Row -->
        <div class="row justify-content-center">
            <div class="col-xl-10 col-lg-12 col-md-9">
                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row">
                            <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
                            <div class="col-lg-6">
                                <div class="p-5">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    @if (Model.Sucesso)
                                    {
                                    <div class="row">
                                        <a href="@Url.Action("Login", "Conta" )" class="btn btn-success btn-icon-split">
                                            <span class="icon text-white-50">
                                                <i class="fas fa-check"></i>
                                            </span>
                                            <span class="text">Senha alterada com sucesso! Clique aqui para ser redirecionado a página principal.</span>
                                        </a>
                                    </div>
                                    <br />
                                    }
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-4">Trocar a senha</h1>
                                    </div>
                                    <form asp-controller="Conta" asp-action="TrocarSenha" class="user" id="formTrocarSenha" method="post" role="form">
                                        <div class="form-group">
                                            <input asp-for="NovaSenha" class="form-control form-control-user" placeholder="Nova senha" />
                                            <span asp-validation-for="NovaSenha" class="text-danger small"></span>
                                        </div>
                                        <div class="form-group">
                                            <input asp-for="NovaSenhaConfirmar" class="form-control form-control-user" placeholder="Confirmar nova senha" />
                                            <span asp-validation-for="NovaSenhaConfirmar" class="text-danger small"></span>
                                        </div>
                                        <input asp-for="SenhaAntiga" type="hidden" />
                                        <button type="submit" class="btn btn-primary btn-user btn-block">Salvar</button>
                                    </form>
                                    <hr>
                                    <div class="text-center">
                                        <a class="small" href="@Url.Action("Login", "Conta" )">Já tem uma conta? Conecte-se!</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <environment include="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/lib/jquery-easing/jquery.easing.js"></script>
        <script src="~/lib/sb-admin-2/dist/js/sb-admin-2.min.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
        <script src="~/lib/jquery-easing/jquery.easing.min.js"></script>
        <script src="~/lib/sb-admin-2/dist/js/sb-admin-2.min.js"></script>
    </environment>
</body>
</html>