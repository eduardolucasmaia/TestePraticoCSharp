@model TesteInvillia.Models.TrocarSenhaViewModel

<div class="row">
    <div class="col-md-12">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Trocar Senha</h6>
            </div>
            <div class="card-body">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row">
                    <div class="col-md-6 col-xl-5">
                        <div class="form-group">
                            <label asp-for="SenhaAntiga" class="control-label"></label>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="@DTO.Ferramentas.Constantes.ICONE_CHAVE"></i></span>
                                </div>
                                <input asp-for="SenhaAntiga" class="form-control" />
                            </div>
                            <span asp-validation-for="SenhaAntiga" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6 col-xl-5">
                        <div class="form-group">
                            <label asp-for="NovaSenha" class="control-label"></label>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="@DTO.Ferramentas.Constantes.ICONE_CHAVE"></i></span>
                                </div>
                                <input asp-for="NovaSenha" class="form-control" />
                            </div>
                            <span asp-validation-for="NovaSenha" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6 col-xl-5">
                        <div class="form-group">
                            <label asp-for="NovaSenhaConfirmar" class="control-label"></label>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="@DTO.Ferramentas.Constantes.ICONE_CHAVE"></i></span>
                                </div>
                                <input asp-for="NovaSenhaConfirmar" class="form-control" />
                            </div>
                            <span asp-validation-for="NovaSenhaConfirmar" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>